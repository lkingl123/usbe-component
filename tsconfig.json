{
  "compilerOptions": {
    "target": "es2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "lib": ["es2021", "dom", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,         // ✅ Only emit .d.ts files
    "sourceMap": false,                  // ❌ Optional: disable if you don’t need them
    "inlineSources": false,
    "incremental": true,
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src"]
}
